{% if edit == 1 and contents is defined %}
	{% for content in contents %}
		{% if content.type == 'textBloc' %}
			{% for textBloc in form.blocTexts %}
				{% if textBloc.vars.value.position ==  content.entity.position %}
					{{ render(controller( 
	                    'ContentElementsManagementSystemBundle:ElementsFormRender:renderTextBlocForm',
	                    { 'form': textBloc.vars.form}
	                )) }}
                {% endif %}
			{% endfor %}  
		{% elseif content.type == 'quoteBloc' %}
			{% for quoteBloc in form.blocQuotes %}
				{% if quoteBloc.vars.value.position ==  content.entity.position %}
					{{ render(controller( 
	                    'ContentElementsManagementSystemBundle:ElementsFormRender:renderQuoteBlocForm',
	                    { 'form': quoteBloc.vars.form,'entity':content.entity}
	                )) }}
                {% endif %}
			{% endfor %} 
		{% elseif content.type == 'galleryBloc' %}
			{% for galleryBloc in form.blocGalleries %}
				{% if galleryBloc.vars.value.position ==  content.entity.position %}
					{{ render(controller( 
	                    'ContentElementsManagementSystemBundle:ElementsFormRender:renderGalleryBlocForm',
	                    { 'form': galleryBloc.vars.form,'entity':content.entity}
	                )) }}
                {% endif %}
			{% endfor %} 
		{% elseif content.type == 'imageBloc' %}
			{% for imageBloc in form.blocImages %}
				{% if imageBloc.vars.value.position ==  content.entity.position %}
					{{ render(controller( 
	                    'ContentElementsManagementSystemBundle:ElementsFormRender:renderImageBlocForm',
	                    { 'form': imageBloc.vars.form,'entity':content.entity}
	                )) }}
                {% endif %}
			{% endfor %} 
		{% endif %}
	{% endfor %}
{% endif %}