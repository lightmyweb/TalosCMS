{% extends 'base.html.twig' %}

{% block body %}
    <h1>Press</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ press.id }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ press.state }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('press_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('press_edit', { 'id': press.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
