
<div class="Nb">
	<p>Le changement d'ordre se fait via un drag and drop <span>Ordre Effectu√©</span> </p>
</div>
<div class="row orderPubLictionperTheme">
	{% for projet in projets if projet.state == true %}
		<div class="col col_1 publicationsOrderElement parent-img-position-picto" 
		data-path="{{path('updateProjetPositionInRef', { 'id': projet.id,'position':'element' })}}" 
		data-id="{{projet.id}}" 
		data-order="{{projet.position}}">
			<div class="content">
				<div class="picto">
						{% if projet.image.src is defined and  projet.image.src is not null %}
							<img class="img-position-picto"  src="{{ asset('uploads/'~ projet.image.src) }}">
						{% else %}
							<img class="img-position-picto" src="https://upload.wikimedia.org/wikipedia/commons/a/ac/No_image_available.svg">
						{% endif %}
					</div>
				<div class="title"><h3>{{projet.translations[app.request.locale].title}}</h3>	</div>
			</div>
		</div>
	{% endfor %}
</div>