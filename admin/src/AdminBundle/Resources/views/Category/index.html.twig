{% extends 'AdminBundle::_shared.html.twig' %}
{% block title %}Category{% endblock %} 
{% block body %}
<div class="col col_12">
    <div class="container_box">
        <div class="box_title">
            <h3>Liste des catégories</h3>
            <div class="button addNewElement">
                <a href="{{path('category_new')}}"><i class="fas fa-plus-circle"></i> Catégorie</a> 
            </div>
        </div>
        <div class="box_content">
            <div class="row">
                <div class="tablesTabs">
                    <button data-value="all" class="active">Tout</button>
                    <button data-value="1">On-Line</button>
                    <button data-value="0">Off-Line</button>
                </div> 
                <div class="table-container">
                    <table id="table" class="display" style="width:100%">
                        <thead>
                            <tr>
                                <!-- <th>#</th> -->
                                <th style="width:1px!important"></th>
                                <th>Nom de la category</th>
                                <th>Auteur</th>
                                <th>Date de création</th>
                                <th>Dernière modification</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody >
                         {% for category in categories %}
                            <tr data-value="{{category.state}}">
                               
                                <td>
                                    {% if category.state == 0 %}
                                        <i style="color:#e03131;font-size:12px;" class="fa fa-circle status-published"></i>
                                    {% else %}
                                        <i style="color:#1d9f3c;font-size:12px;" class="fa fa-circle status-published"></i>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if category.translations[app.request.locale].name  is defined %}
                                        {{ category.translations[app.request.locale].name }}
                                    {% else %}
                                        category <small>Titre introuvable</small>
                                    {% endif %}
                                </td>
                                <td class="user_td" 
                                    data-route="{{ 
                                        path('affectUser', { 
                                            'user_id': '777-user',
                                            'entity_type':'Category',
                                            'entity_id':category.id,
                                        }
                                    ) 
                                }}">
                                    {% if category.user != null %}
                                        {{ category.user.firstName }} {{ category.user.lastName }}
                                    {% else %}
                                        {{ render(controller( 
                                            'AdminBundle:RenderTemplate:renderUserSelect'
                                        )) }}
                                    {% endif %}
                                </td>
                                <td>{% if category.createdAt %}{{ category.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{% if category.updatedAt %}{{ category.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td class="action_td">
                                    {# <a href="#" class="view_action" target="_blank"><i class="fas fa-eye"></i></a>  - #}  
                                    <a href="{{ path('category_edit', { 'id': category.id }) }}" class="edit_action"><i class="fas fa-pen-square"></i></a>  
                                        - 
                                        <a data-href="{{ path('element_delete', { 'id': category.id,'entity':'category' }) }}" class="delete_action entity_delete">
                                        <i class="fas fa-trash-alt"></i></a>  
                                      
                                </td>
                            </tr>
                        {% endfor %} 
                        </tbody>
                    </table>
                </div> 
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block lib_css %}<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">{% endblock %}
{% block lib_script %}<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>{% endblock %}
{% block local_script %}
    <script type="text/javascript" src="{{ asset('adminTemplateFiles/build/js/data_table_script.js') }}"></script>
{% endblock %}