{% extends 'AdminBundle::_shared.html.twig' %}
{% block title %}Projects{% endblock %} 
{% block body %}
<div class="col col_12">
    <div class="container_box">
        <div class="box_title">
            <h3>Liste des projets</h3>
            <div class="button addNewElement">
                <a href="{{path('project_new')}}"><i class="fas fa-plus-circle"></i> Projet</a> 
            </div>
        </div>
        <div class="box_content">
            <div class="row">
                <div class="tablesTabs">
                    <button data-value="all" class="active">Tout</button>
                    <button data-value="1">On-Line</button>
                    <button data-value="0">Off-Line</button>
                </div> 
                <div class="table-container">
                    <table id="table" class="display" style="width:100%">
                        <thead>
                            <tr>
                                <!-- <th>#</th> -->
                                <th style="width:1px!important"></th>
                                <th>Titre</th>
                                <th>Auteur</th>
                                <th>Date de création</th>
                                <th>Dernière modification</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody >
                         {% for project in projects %}
                            <tr data-value="{{project.state}}">
                                {# <!-- <td><a href="{{ path('project_edit', { 'id': page.id }) }}">{{ page.id }}</a></td> --> #}
                                <td>
                                    {% if project.state == 0 %}
                                        <i style="color:#e03131;font-size:12px;" class="fa fa-circle status-published"></i>
                                    {% else %}
                                        <i style="color:#1d9f3c;font-size:12px;" class="fa fa-circle status-published"></i>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if project.translations[app.request.locale].title  is defined %}
                                        {{ project.translations[app.request.locale].title }}
                                    {% else %}
                                        Projet <small>Titre introuvable</small>
                                    {% endif %}
                                </td>
                                <td class="user_td" 
                                    data-route="{{ 
                                        path('affectUser', { 
                                            'user_id': '777-user',
                                            'entity_type':'Project',
                                            'entity_id':project.id,
                                        }
                                    ) 
                                }}">
                                    {% if project.user != null %}
                                        {{ project.user.firstName }} {{ project.user.lastName }}
                                    {% else %}
                                        {{ render(controller( 
                                            'AdminBundle:RenderTemplate:renderUserSelect'
                                        )) }}
                                    {% endif %}
                                </td>
                                <td>{% if project.createdAt %}{{ project.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{% if project.updatedAt %}{{ project.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td class="action_td">
                                    {# <a href="#" class="view_action" target="_blank"><i class="fas fa-eye"></i></a>  -   #}
                                    <a href="{{ path('project_edit', { 'id': project.id }) }}" class="edit_action"><i class="fas fa-pen-square"></i></a>  
                                    {# {% if page.id != 1  and page.id != 7  and page.id != 8  and page.id != 12  and app.user.role != 'ROLE_EDITOR'%} #}
                                        - 
                                        <a data-href="{{ path('element_delete', { 'id': project.id,'entity':'Project' }) }}" class="delete_action entity_delete">
                                        <i class="fas fa-trash-alt"></i></a>  
                                    {# {% endif %} #}
                                    
                                </td>
                            </tr>
                        {% endfor %} 
                        </tbody>
                    </table>
                </div> 
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block lib_css %}<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">{% endblock %}
{% block lib_script %}<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>{% endblock %}
{% block local_script %}
    <script type="text/javascript" src="{{ asset('adminTemplateFiles/build/js/data_table_script.js') }}"></script>
{% endblock %}
