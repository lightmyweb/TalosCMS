{% extends 'CoreSystemBundle::_shared.html.twig' %}
{% block title %}Paramètres{% endblock %} 
{% block body %}
{{ form_start(edit_form) }}
<div class="col col_12">
    <div class="container_box">
        <div class="box_title">
            <h3>Paramètres</h3>
        </div>
        <div class="box_content">
            <div class="time_line">
                <div class="line"></div>
                <div class="part  active " data-target="generale">Général</div>
                <div class="part " data-target="seo">Taille optimale pour les images</div>
                <div class="part " data-target="content">Réseaux sociaux</div>
            </div>
            <div class="time_line_target">
                <div class="part active " data-source="generale">
                    <div class="row">
                        <div class="form_group col col_5">
                            <div class="input_box">
                                {{ form_widget(edit_form.title, { 'attr': {'placeholder': 'Titre (*)'}} ) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form_group col col_5">
                            <div class="input_box">
                                {{ form_widget(edit_form.email, { 'attr': {'placeholder': 'Email (*)'}} ) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form_group col col_5 ">
                            <label class="input_label displayLabel">Favicon</label>
                            {% if setting.favicon is not null %}
                                <div class="image"><img src="{{ asset('uploads/'~ setting.favicon) }}"> </div>
                            {% endif %} 
                            <div class="input_box">
                                {{form_widget(edit_form.favicon)}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="part" data-source="seo">
                    <div class="row">
                        <div class="col col_5 form_group">
                            <label class="input_label displayLabel">Taille optimale pour les images</label>
                            <div class="row">
                                <div class="col col_4 form_group" style="top:0px;">
                                    <div class="input_box">{{form_widget(edit_form.widthForCrop)}}</div>
                                </div>
                                <div class="col col_4 form_group" style="top:0px;">
                                    <div class="input_box">{{form_widget(edit_form.heigthForCrop)}}</div>
                                </div>
                            </div>  
                        </div>
                    </div>                     
                </div>
                <div class="part " data-source="content">
                    <div class="row">
                        <div class="form_group col col_5">
                            <div class="input_box">
                                {{ form_widget(edit_form.facebook, { 'attr': {'placeholder': 'lien facebook (*)'}} ) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form_group col col_5">
                            <div class="input_box">
                                {{ form_widget(edit_form.instagram, { 'attr': {'placeholder': 'lien instagram (*)'}} ) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form_group col col_5">
                            <div class="input_box">
                                {{ form_widget(edit_form.pinterest, { 'attr': {'placeholder': 'lien pinterest (*)'}} ) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div style="display:none">{{form_rest(edit_form)}}</div>
        </div>
    </div>
</div>
<div class="col col_10 marginTopMinus">
    <div class="submitResetModifBtnsSection">
         <input type="submit" value="Enregistrer"  class="btn btn-submit"/>
    </div>
</div>
{{ form_end(edit_form) }}
{% endblock %}


{% block local_script %}
    <script src="{{ asset('adminTemplateFiles/build/js/boxes_script.js') }}" type="text/javascript"></script>
{% endblock %}
